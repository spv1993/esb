	<build>
		<plugins>
			<plugin>
	            <groupId>org.codehaus.mojo</groupId>
	            <artifactId>jaxb2-maven-plugin</artifactId>
	            <version>2.4</version>
	            <executions>
	                <execution>
	                    <id>xjc</id>
	                    <goals>
	                        <goal>xjc</goal>
	                    </goals>
	                </execution>
	            </executions>
	            <configuration>
	                <packageName>edu.servicemix.esb.commons.schedule</packageName>
	                <sources>
	                    <source>src/main/resources/META-INF/xsd/Schedule.xsd</source>
	                </sources>
	                <xjbSources>
			            <xjbSource>src/main/resources/META-INF/xjb/Schedule.xjb</xjbSource>
			        </xjbSources>
	            </configuration>
	        </plugin>
			
		
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
			</plugin>
		    
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<version>2.4.0</version>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.name}</Bundle-SymbolicName>
						<Import-Package>
							 javax.xml.*
							,org.apache.camel
							,org.apache.camel.*
							,org.apache.cxf
							,org.apache.cxf.*
							,javax.ws.rs
							,javax.ws.rs.*
							,org.apache.log4j
							,org.apache.log4j.*
							,org.osgi.framework
							,org.osgi.service.blueprint
						</Import-Package>
						<Export-Package>
							 edu.servicemix.esb.commons.schedule
							,edu.servicemix.esb.commons.rest
							,edu.servicemix.esb.commons.rest.*
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

